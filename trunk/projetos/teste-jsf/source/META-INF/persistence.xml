<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">

	<persistence-unit name="myEntityManager" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<class>teste.entidade.Categoria</class>
		<class>teste.entidade.Cidade</class>
		<class>teste.entidade.Cliente</class>
		<class>teste.entidade.Item</class>
		<class>teste.entidade.ItemId</class>
		<class>teste.entidade.Pedido</class>
		<class>teste.entidade.Produto</class>
		<class>teste.entidade.Tabela</class>
		<class>teste.entidade.Campo</class>

		<properties>
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/db001" />
			<property name="hibernate.connection.username" value="root" />
			<property name="hibernate.connection.password" value="root" />
			<property name="hibernate.show_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>